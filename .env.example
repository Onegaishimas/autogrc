# ControlCRUD - Environment Configuration Template
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# Database Configuration
# =============================================================================
# For Docker Compose (PostgreSQL container)
POSTGRES_USER=autogrc
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_DB=autogrc

# For Backend Application
DB_HOST=postgres
DB_PORT=5432
DB_USER=autogrc
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=autogrc
DB_SSLMODE=disable

# =============================================================================
# Backend Configuration
# =============================================================================
# Server
SERVER_PORT=8080
LOG_LEVEL=info

# Encryption key for credentials (32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=GENERATE_A_SECURE_KEY_HERE

# CORS
CORS_ALLOWED_ORIGINS=https://autogrc.mcslab.io,http://localhost:5173

# =============================================================================
# ServiceNow Configuration
# =============================================================================
SERVICENOW_TIMEOUT_SECONDS=30
SERVICENOW_MAX_RETRIES=3

# =============================================================================
# Frontend Configuration (build-time)
# =============================================================================
VITE_API_BASE_URL=/api

# =============================================================================
# Production Settings
# =============================================================================
# Uncomment and configure for production deployment

# SSL Certificate paths (mounted in nginx container)
# SSL_CERT_PATH=/etc/nginx/ssl/autogrc.crt
# SSL_KEY_PATH=/etc/nginx/ssl/autogrc.key
